<!DOCTYPE html>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<html>
<head>
  <title>RbApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <% unless notice.blank? %>
    <%= notice %>
  <% end %>
  <% unless alert.blank? %>
    <%= alert %>
  <% end %>

<%= yield %>

</body>
</html>
